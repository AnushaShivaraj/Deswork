<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
xmlns:l="sap.ui.layout">
    <Dialog id="_IDGenDialog1"  title="PROJECT INFORMATION" draggable="true" resizable="true" afterClose="dialogAfterclose" >
        <content>
            <VBox id="_IDGenVBox1"  class="sapUiTinyMarginBeginEnd">
                <f:SimpleForm id="_IDGenSimpleForm1" >

                <core:Title id="_IDGenTitle1" text="Project Details" />

                <Label id="_IDGenLabel1"  text="Project Name" />
                <Input id="_IDGenInput1" value="{mproject>/name}"   required="true"/>

                <Label id="_IDGenLabel2"  text="Description" />
                <Input id="_IDGenInput2" value="{mproject>/description}" required="true"/>
                <Label id="_IDGenLabel3"  text="Type" required="true" />
                <Select id="_IDGenSelect1" forceSelection="false" required="true" selectedKey="{mproject>/type}"  >
                <core:Item id="_IDGenItem1"  key="Internal"  text="Internal"/>
                <core:Item id="_IDGenItem2"  key="External"  text="External"/>
                </Select>
                <Label id="_IDGenLabel4" required="true" text="Start Date" />
                <DatePicker id="_IDGenDatePicker1" value="{mproject>/startDate}" valueFormat="yyyy-MM-dd" required="true"/>

                <Label id="_IDGenLabel5" required="true" text="End Date" />
                <DatePicker id="_IDGenDatePicker2" value="{mproject>/estimatedEndDate}" valueFormat="yyyy-MM-dd" required="true" />

                <Label id="_IDGenLabel6"  text="Actual End Date" />
                <DatePicker id="_IDGenDatePicker3" value="{mproject>/actualEndDate}" valueFormat="yyyy-MM-dd" editable="false" />
                
                <Label id="_IDGenLabel7"  text="Priority" required="true" />
                <Select id="_IDGenSelect2" forceSelection="false" required="true" selectedKey="{mproject>/priority}">
              <core:Item id="_IDGenItem3" key="High" text="High" />
                <core:Item id="_IDGenItem4" key="Critical"  text="Critical" />
                 <core:Item id="_IDGenItem5" key="Moderate" text="Moderate" />
                  <core:Item id="_IDGenItem6" key="Low"  text="Low"  />
                </Select>

                <!-- <Label  text="Effort" />
                <Input value="{mproject>/effort}" required="true" editable="false"/> -->

                <Label id="_IDGenLabel8"  text="Status"  required="true" />
                <Select id="_IDGenSelect3" forceSelection="false" required="true" selectedKey="{mproject>/status}" >
                <core:Item id="_IDGenItem7"  key="New"  text="New"/>
                <core:Item id="_IDGenItem8"  key="In-progress"  text="In-progress"/>
                <core:Item id="_IDGenItem9"  key="Completed"  text="Completed"/>
                </Select>



                <Label id="_IDGenLabel9"  text="Customer Name"   required="true"/>	
                <Select id="_IDGenSelect4" forceSelection="false" required="true" selectedKey="{mproject>/p_customer}" items="{customerInfo>/}">
                <core:Item id="_IDGenItem10"  key="{customerInfo>id}"  text="{customerInfo>attributes/name}"/>
                </Select>

                <Label id="_IDGenLabel10" required="true" text="Estimated Budget" />
                <Input id="_IDGenInput3" value="{mproject>/estimated_budget}" type="Number" required="true"/>

                <Label id="_IDGenLabel11"  text="Actual Budget" />
                <Input id="_IDGenInput4" value="{mproject>/actual_budget}" type="Number" editable="false"/>
        
                </f:SimpleForm>
            </VBox>
        </content>
        <beginButton>
            <Button id="_IDGenButton1"  text="Save" press="onSaveProject"/>
        </beginButton>
        <endButton>
            <Button id="_IDGenButton2"  text="Cancel" press="closeProjectDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
